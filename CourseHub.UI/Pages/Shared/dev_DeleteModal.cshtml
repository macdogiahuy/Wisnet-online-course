@page
@model CourseHub.UI.Pages.Shared.dev_DeleteModalModel
@{
    Layout = null;
    string element = "Course";
}

<link rel="stylesheet" href="~/css/bootstrap.min.css" />





<!-- Make changes below-->
<!-- Button trigger modal -->
<button id="app-launch-btn" type="button" class="btn btn-primary" >
    Open Modal
</button>



<div class="modal fade" id="app-confirm-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase text-danger">"Confirm"</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-primary">Are you sure you want to delete this @element ?"</p>
            </div>
            <div class="modal-footer">
                <button id="app-confirm-btn" type="button" class="btn btn-outline-danger">Yes</button>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>









<!-- Make changes above-->


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('app-launch-btn').onclick = () => {
        $("#app-confirm-modal").modal('show');
    }
</script>